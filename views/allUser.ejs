<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 20px;
            background-color: #f5f5f5;
        }

        h1 {
            color: #333;
            text-align: center;
        }

        .heading-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        a {
            background-color: #007BFF;
            color: white;
            padding: 10px 15px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        a:hover {
            background-color: #0056b3;
        }

        .user-card {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .container-inner-card {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        img {
            max-width: 100%;
            max-height: 150px;
            border-radius: 8px;
            margin-top: 10px;
        }

        .form-btns {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 7px 14px;
            border: none;
            cursor: pointer;
            font-size: larger;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #45a049;
        }
    </style>
</head>

<body>
    <div class="heading-container">
        <h1>All Users</h1>
        <div class="search-bar">
            <input type="text" id="searchInput" placeholder="Search by name..." oninput="searchUsers()" onkeydown="handleEnter(event)">
            <button onclick="searchUsers()">Search</button>
        </div>
        <a href="/addUser">Add New User</a>
    </div>

    <% if (users.length > 0) { %>
        <% users.forEach(user => { %>
            <div class="user-card">
                <div class="container-inner-card">
                    <div>
                        <h3>Name: <%= user.name %></h3>
                        <p>Age: <%= user.age %></p>
                        <p>City: <%= user.city %></p>
                        <p>Nationality: <%= user.nationality %></p>
                        <p class="created-at">Created at: <%= user.created_at %></p>
                    </div>
                    <div>
                        <img src="<%= user.img_path %>" alt="User Image">
                    </div>
                </div>
                <div class="form-btns">
                    <form action="/user/<%= user.user_id %>" method="get">
                        <button type="submit">View User </button>
                    </form>
                    <form action="/deleteUser/<%= user.user_id %>" method="post">
                        <button type="submit">Delete User üóëÔ∏è</button>
                    </form>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <p>No users available.</p>
    <% } %>
</body>
<script>


    function searchUsers() {
        var input, filter, userCards, card, name, i;
        input = document.getElementById("searchInput");
        filter = input.value.toUpperCase();
        userCards = document.getElementsByClassName("user-card");

        for (i = 0; i < userCards.length; i++) {
            card = userCards[i];
            name = card.getElementsByTagName("h3")[0];
            if (name.innerText.toUpperCase().indexOf(filter) > -1) {
                card.style.display = "";
            } else {
                card.style.display = "none";
            }
        }
    }
</script>


</html>
